{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@globals/*": ["globals/*"]
    }
  },
  "include": ["./"]
}
